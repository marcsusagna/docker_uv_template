{
  "name": "Dev Container",
  "dockerFile": "../devops/dockerfiles/Dockerfile.dev",
  "context": "..",
  "remoteUser": "appuser",
  "workspaceFolder": "/home/appuser/uv_template",
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/appuser/uv_template,type=bind,consistency=cached",
    "source=${env:HOME}/.gitconfig,target=/home/appuser/.gitconfig,type=bind,consistency=cached,readonly"
  ],
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
  ],
  "postCreateCommand": "uv sync --all-extras && pre-commit install"
}